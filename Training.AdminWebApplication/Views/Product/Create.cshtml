@model Training.ViewModel.Catalog.ProductModel.CreateProductRequest

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts{
    <script>
    ClassicEditor
        .create( document.querySelector( '#Content' ) )
        .catch( error => {
            console.error( error );
        } );
    </script>
}

<div class="panel">
    <div class="panel-heading">
        <h3 class="panel-title">Thêm mới sản phẩm</h3>
    </div>
    <form class="form-horizontal" asp-action="Create" asp-controller="Product" enctype="multipart/form-data" method="post">
        @Html.AntiForgeryToken()
        <div class="panel-body">
            <div class="form-group">
                <label class="col-sm-2 control-label" asp-for="Name"></label>
                <div class="col-sm-9">
                    <input type="text" asp-for="Name" class="form-control">
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" asp-for="Thunbar"></label>
                <div class="col-sm-9">
                    <input type="file" asp-for="Thunbar" class="form-control">
                </div>
                <span asp-validation-for="Thunbar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" asp-for="Images"></label>
                <div class="col-sm-9">
                    <input type="file" asp-for="Images" multiple class="form-control">
                </div>
                <span asp-validation-for="Images" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" asp-for="Price"></label>
                <div class="col-sm-9">
                    <input type="number" asp-for="Price" class="form-control">
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" asp-for="PriceIn"></label>
                <div class="col-sm-9">
                    <input type="number" asp-for="PriceIn" class="form-control">
                </div>
                <span asp-validation-for="PriceIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" asp-for="Sale"></label>
                <div class="col-sm-9">
                    <input type="number" asp-for="Sale" class="form-control">
                </div>
                <span asp-validation-for="Sale" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" asp-for="CategoryId"></label>
                <div class="col-sm-9">
                       <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(@ViewBag.procate,"value","name"))"></select>
                </div>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" asp-for="Content"></label>
                <div class="col-sm-9">
                    <textarea type="text" id="Content" asp-for="Content" class="form-control"></textarea>
                </div>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" asp-for="Quantity"></label>
                <div class="col-sm-9">
                    <input type="number" asp-for="Quantity" class="form-control">
                </div>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" asp-for="Hot">Hiển thị ở trang chủ</label>
                <div class="col-sm-9">
                    <select asp-for="Hot" class="form-control">
                        <option selected value="0">Hiện</option>
                        <option value="1">Ẩn</option>
                    </select>
                </div>
                <span asp-validation-for="Hot" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" asp-for="Status">Trạng thái</label>
                <div class="col-sm-9">
                    <select asp-for="Status" class="form-control">
                        <option selected value="0">Hiện</option>
                        <option value="1">Ẩn</option>
                    </select>
                </div>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
        </div>
        <div class="panel-footer text-left">
            <button class="btn btn-info" type="submit">Tạo mới sản phẩm</button>
        </div>
    </form>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>


