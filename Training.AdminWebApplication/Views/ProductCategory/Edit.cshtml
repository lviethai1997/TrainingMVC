@model Training.ViewModel.Catalog.ProductCategoryModel.UpdateProductCategoryRequest

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="panel">
    <div class="panel-heading">
        <h3 class="panel-title">Tạo mới danh mục</h3>
    </div>
    <form class="form-horizontal" asp-action="Edit" asp-controller="ProductCategory" method="post">
        @Html.AntiForgeryToken()
        <div class="panel-body">
            <div class="form-group">
                <label class="col-sm-2 control-label" asp-for="Name">Tên danh mục</label>
                <div class="col-sm-9">
                    <input type="text" asp-for="Name" class="form-control">
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" asp-for="SaleCate">Khuyến mãi theo danh mục</label>
                <div class="col-sm-9">
                    <input type="number" asp-for="SaleCate" class="form-control">
                </div>
                <span asp-validation-for="SaleCate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" asp-for="ParentId">Danh mục cha</label>
                <div class="col-sm-9">
                   <select asp-for="ParentId" class="form-control" asp-items="@(new SelectList(@ViewBag.DrProCat,"value","name"))"></select>
                </div>
                <span asp-validation-for="ParentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" asp-for="Banner">Banner</label>
                <div class="col-sm-9">
                    <input type="text" asp-for="Banner" class="form-control">
                </div>
                <span asp-validation-for="Banner" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" asp-for="Show">Hiển thị ở trang chủ</label>
                <div class="col-sm-9">
                  <select asp-for="Show" class="form-control">
                        <option selected value="0">Hiện</option>
                        <option value="1">Ẩn</option>
                    </select>
                </div>
                <span asp-validation-for="Show" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" asp-for="Status">Trạng thái</label>
                <div class="col-sm-9">
                    <select asp-for="Status" class="form-control">
                        <option selected value="0">Hiện</option>
                        <option value="1">Ẩn</option>
                    </select>
                </div>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
        </div>
        <div class="panel-footer text-left">
            <button class="btn btn-info" type="submit">Cập nhật danh mục</button>
        </div>
    </form>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
